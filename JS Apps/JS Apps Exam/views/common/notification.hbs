<section id="notifications">
    {{#if success}}
    <div class="p-3 mb-2 bg-success w-50 text-white text-center" onclick="hide(this)" id="successNotification" style="display: block;">{{success}}</div>
    {{/if}}
    {{#if error}}
    <div class="p-3 mb-2 bg-danger w-50 text-white text-center" onclick="hide(this)" id="errorNotification" style="display: block;">{{error}}</div>
    {{/if}}
    <div class="p-3 mb-2 bg-info w-50 text-white text-center" id="loadingNotification">Loading...</div>
</section>
<script>
    function hide(notification) {
        notification.style.display = "none";
        sessionStorage.removeItem("success");
        sessionStorage.removeItem("error");
    }
</script>