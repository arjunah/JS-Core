<a href="#/team-details/{{this._id}}" class="team-box">
    <span class="spanner">Team name</span>
    <span class="title">{{this.name}}</span>
    <span class="spanner">Description</span>
        {{#if this.comment}}
            <p>{{this.comment}}</p>
        {{else}}
            <p>No description</p>
        {{/if}}
</a>